{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_index') }}">Retour à la liste </a>

    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">Modifier</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
